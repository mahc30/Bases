<!DOCTYPE html>
<html lang="en">

<head>
  <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
  <meta content="utf-8" http-equiv="encoding">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Musiquita</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>

  <table class="table table-striped">
    <tr class="text-center">
      <th>Id</th>
      <th>Nombre</th>
      <th>Compositor</th>
      <th>Tonalidad</th>
      <th>Nivel</th>
      <th>Arreglo</th>
      <th></th>
      <th></th>

      <th><form method="GET" action="/" class="text-right">
        <button type="submit" class="btn btn-info">Home</button>
    </form></th>
    </tr>

    <% for (var i = 0; i < result.length; i++) { %>
    <tr name="<% result[i].id %>" class="text-center">
      <td><%= result[i].ID %></td>
      <td><%= result[i].Obra %></td>
      <td><%= result[i].Compositor %></td>
      <td><%= result[i].Tonalidad %></td>
      <td><%= result[i].Nivel%></td>
      <td><%= result[i].EsArreglo %></td>
      <td>
        <form method="GET" action="/pdf/<%= result[i].ID %>">
          <button type="submit" class="btn btn-success">Descargar</button>
        </form>
      </td>
      <td>
        <form method="GET" action="/view/edit/obra/<%= result[i].ID %>">
          <button type="submit" class="btn btn-primary">Editar</button>
        </form>
      </td>
      <td>
        <form method="POST" action="/delete/obra/<%= result[i].ID%>">
          <button type="submit" class="btn btn-danger">Eliminar</button>
        </form>
      </td>
    </tr>
    <% } %>
  </table>

</body>

</html>